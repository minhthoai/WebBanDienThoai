
@model List<WebBanDienThoai.Models.MenuNavigation>


<div id="headerNav" class="col-lg-6 col-md-7 col-sm-12 col-xs-12">
    <nav id="navWrap" class="nav navSiteMain">

        <div class="loginMB visible-xs">
            <div class="wrapLogin clearfix">
                <div class="icon">
                    <img src="../images/icon_avatar.png" alt=" ">
                </div>
                <div class="user">
                    <a class="log-only" href="#" title="Đăng nhập">Đăng nhập</a>
                    <h3>
                        Thông tin tài khoản
                    </h3>
                </div>
            </div>
        </div>

        <ul class="nav-navbar clearfix">
            @foreach (var item in Model)
            {
            <li>
                @{ if (item.PageStyle == 1)
                    {

                        if (item.FormatPage == 1)
                        {
                            foreach (var cate in ViewBag.get_category)
                            {
                                if (item.MenuID == cate.MenuID)
                                {
                                    <a href="/collections/@cate.CategoryID/@cate.Alias_Cate" title="@cate.MenuName" class="">
                                        <img src="@cate.IconMenu" alt="@cate.MenuName" class="navIcon" />
                                        <span>@cate.MenuName</span>
                                    </a> }
                            }
                        }

                    }
                    else if (item.PageStyle == 2)
                    {
                        <a href="/pages/@item.MenuID/@item.MenuName" title="@item.MenuName" class="">
                            <img src="@item.IconMenu" alt="@item.MenuName" class="navIcon" />
                            <span>@item.MenuName</span>
                        </a> }
                    else if (item.PageStyle == 3)
                    {
                        <a href="@item.PageLink" title="@item.MenuName" class="">
                            <img src="@item.IconMenu" alt="@item.MenuName" class="navIcon" />
                            <span>@item.MenuName</span>
                        </a> }
                    else if (item.PageStyle == 4)
                    {
                        <a href="/pages/@item.MenuName" title="@item.MenuName" class="">
                            <img src="@item.IconMenu" alt="@item.MenuName" class="navIcon" />
                            <span>@item.MenuName</span>
                        </a> }
                    else if (item.PageStyle == 5)
                    {
                        <a href="/NewCollection/News" title="@item.MenuName" class="">
                            <img src="@item.IconMenu" alt="@item.MenuName" class="navIcon" />
                            <span>@item.MenuName</span>
                        </a> }}

                @Html.Action("LoadParent", "Home", new { id = item.MenuID })
            </li>
}


        <li class="account">
            @if (Session["customerID"] == null)
            {


                <a href="javascript:void(0)"><i class="fa fa-angle-double-down" aria-hidden="true"></i></a><div class="wrap mainChild">
                    <ul class="notStyle accountList">
                        <li><a class="reg" href="~/Login/RegisterUser" title="Đăng ký">Đăng ký</a></li>
                        <li> <a class="log-only" href="~/Login/LoginAccount" title="Đăng nhập">Đăng nhập</a></li>
                    </ul>
                </div>
            }
            else
            {
                <a href="javascript:void(0)"><i class="fa fa-angle-double-down" aria-hidden="true"></i></a><div class="wrap mainChild">
                    <ul class="notStyle accountList">

                        <li><a href="~/Account/Index/@Session["customerID"]"> <h4>Xin Chào @Session["customerName"]</h4></a> </li>
                        <li> <a class="log-only" href="~/Account/History/@Session["customerID"]" title="Đăng nhập">Lịch sử mua hàng</a></li>


                        <li> <a class="log-only" href="~/Login/Logout" title="Đăng nhập">Đăng xuất</a></li>
                    </ul>
            </div>
                    }
            </li>

            </ul>
        <div class="visible-xs closeMenuMB text-center">
            <a href="javascript:void(0)" class="closeNav viewAll">Đóng</a>
        </div>
    </nav>
</div>