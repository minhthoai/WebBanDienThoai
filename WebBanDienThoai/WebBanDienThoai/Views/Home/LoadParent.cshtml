@model IEnumerable<WebBanDienThoai.Models.MenuNavigation>

@if ((int)ViewBag.count > 0)
{
<ul class="mainChild levlup_2" role="menu">
        @foreach (var item2 in Model)
        {
        <li class="">
            @{
                if (item2.PageStyle == 1)
                {

                    if (item2.FormatPage == 1)
                    {
                        foreach (var cate in ViewBag.get_category)
                        {
                            if (item2.MenuID == cate.MenuID)
                            {
                                <a href="/collections/@cate.CategoryID/@cate.Alias_Cate" title="@cate.MenuName">
                                    <span>@cate.MenuName</span>
                                </a>
                            }
                        }
                    }
                   
                }
                else if (item2.PageStyle == 2)
                {
                    <a href="/pages/@item2.MenuID/@item2.MenuName" title="@item2.MenuName" class="">
                        <span>@item2.MenuName</span>
                    </a>
                }
                else if (item2.PageStyle == 3)
                {
                    <a href="@item2.PageLink" title="@item2.MenuName" >
                        <span>@item2.MenuName</span>
                    </a>
                }

            }
        </li>
        }

</ul>
}