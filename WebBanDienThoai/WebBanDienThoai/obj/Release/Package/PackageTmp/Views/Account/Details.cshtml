@model IEnumerable<WebBanDienThoai.Models.OrderDetail>
<h1 style="text-align:center; color:blue"> Chi Tiết Đơn Hàng</h1>
<br />
<table class="table">
    <tr>
        <th style="text-align:center">
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th style="text-align:center">
            @Html.DisplayNameFor(model => model.Quanlity)
        </th>
        <th style="text-align:center">
            @Html.DisplayNameFor(model=>model.Product.Images)
        </th>
       @* <th>
            @Html.DisplayNameFor(model => model.TotalProduct)
        </th>*@

        <th style="text-align:center">
            @Html.DisplayNameFor(model => model.Product.ProductName)
        </th>
      
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style="text-align:center">
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td style="text-align:center">
            @Html.DisplayFor(modelItem => item.Quanlity)
        </td>
        <td style="text-align:center">
           <img src="@item.Product.Images" style="width:90px;height:90px"/>
        </td>
       @* <td>
            @Html.DisplayFor(modelItem => item.TotalProduct)
        </td>*@
        <td style="text-align:center">
            @Html.DisplayFor(modelItem => item.Product.ProductName)
        </td>
        <td>
        
        </td>
    </tr>
}


</table>
